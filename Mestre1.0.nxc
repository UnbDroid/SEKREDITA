      }else{
        if(tentativa == 1){
          tentativa = 0;
          if(ultima_direcao == frente){
            gira90(esquerda);
          }else if(direcao[1] != '0'){
            gira90(esquerda);
          }
        }
      }
      break;
    case VERDE:
      if(ultimo_lado != PRETO){
        grava_certo();
      }
      ultimo_lado = VERDE;
