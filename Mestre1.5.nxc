  Off(motor_ambos);
  Wait(200);

	if(le_cor(esquerda) != BRANCO){
		while(le_cor(esquerda) != BRANCO){
			OnRev(motor_e, potencia_inicial);
		}
	}else if(le_cor(direita) != BRANCO){
		while(le_cor(direita) != BRANCO){
			OnRev(motor_d, potencia_inicial);
		}
	}

  Off(motor_ambos);
  Wait(200);

  ResetRotationCount(motor_ambos);
  Wait(100);

}

